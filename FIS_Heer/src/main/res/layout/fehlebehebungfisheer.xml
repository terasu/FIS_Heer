            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fehlermain_leer"
            android:id="@+id/button4" android:layout_below="@+id/button3" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" android:onClick="fail"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fehlermain_leer"
            android:id="@+id/button5" android:layout_below="@+id/button4" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" android:onClick="fail"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fehlermain_leer"
            android:id="@+id/button6" android:layout_below="@+id/button5" android:layout_alignParentRight="true"
