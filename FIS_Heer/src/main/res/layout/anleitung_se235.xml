<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/se235anleitung"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" android:textSize="25dp"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/textView"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/inbetriebnahmese235regl"
                android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1. Alle Kabel von den Stecker A und B enfernen."
                android:id="@+id/textView3" android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2. Schalter D auf 0"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/textView3"
                android:layout_alignRight="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3. Funktionsschalter E je Situation auf 1"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView4" android:layout_alignLeft="@+id/textView4"
                android:layout_alignRight="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4. Kanalwahlschalter G auf 1"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5" android:layout_alignLeft="@+id/textView5"
                android:layout_alignRight="@+id/textView5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5. Hauptschalter F auf kleine Sendeleistung. (Mikrodispoo: kleine Sendeleistung = 0.5Watt) Testprogramm läuft bis ID-----"
                android:id="@+id/textView7" android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6" android:layout_alignRight="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="6. Seriennummer des Fk Gt eintippen. (ID-Nummer entspricht der Seriennummer)"
                android:id="@+id/textView8" android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7" android:layout_alignRight="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="7. ENTR   BASE KEY? Mit ENTR bestätigen"
                android:id="@+id/textView9" android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8" android:layout_alignRight="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="SUBSCR N? Weiter machen mit, mit Fill-Gun FG-235 Laden."
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9" android:layout_alignLeft="@+id/textView9"
                android:layout_alignRight="@+id/textView3"/>
    </RelativeLayout>
</RelativeLayout>