<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/se235_sync"
              android:id="@+id/textView"
              android:layout_marginTop="10dp" android:textSize="25dp"
              android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/sync"
            android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/se235sync_text"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/imageView"
            android:layout_alignRight="@+id/imageView" android:layout_marginTop="10dp"/>
</RelativeLayout>